extends ./layout.jade

block content
   h3 SMA Configuration
   .container-fluid
      .row
         .col-md-1
            //- default direction is output
            p
               b Direction
            input(type="checkbox", name='sma-dir', unchecked)#sma_dir
         .col-md-1
            //- default polarity is active low / falling edge
            p
               //- TODO: use e.g. bootstrap to create tooltips where necessary
               //- (-VE := active low / falling edge, +VE := active high / rising edge)
               b Polarity
            input(type="checkbox", name='sma-pol', unchecked)#sma_pol       
   hr
   ul.nav.nav-tabs
      li.active(role="presentation")
         a#chan_a Channel A
      li(role="presentation")
         a#chan_b Channel B
      li(role="presentation")
         a#chan_c Channel C
      li(role="presentation")
         a#chan_d Channel D
   br
   ul.nav.nav-tabs
      li.active(role="presentation")
         a#trigger_rx RX
      li(role="presentation")
         a#trigger_tx TX
   br
   h3 Trigger Settings
   .container-fluid
      .row
         .col-md-1
            //- default mode is level-triggered
            p
               b SMA Mode
            input(type="checkbox", name='sma-mode', unchecked)#sma_mode
         .col-md-1
            //- The following are combined to form the "trig_sel" property 
            p
               b SMA
            input.input-xs(type="checkbox", name='trig-sel-sma')#trig_sel_sma
         .col-md-1
            p
               b Backoff
            input.input-xs(type="number", name='edge-backoff')#edge_backoff
         .col-md-1
            p
               b Samples
            input.input-xs(type="number", name='edge-samples')#edge_samples
   br
   .div(name='gating-div')#gating_div
     br
     h3 TX Gating
     .container-fluid
        .row
           .col-md-1
              //- default gating is output
              p
                 b DSP Gating
              input(type="checkbox", name='gating', unchecked)#gating
